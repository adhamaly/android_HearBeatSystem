<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.Profile">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Profile_Image"
        android:layout_width="173dp"
        android:layout_height="121dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:src="@drawable/hospital" />

        <TextView
            android:id="@+id/BPM"
            android:layout_width="105dp"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/BPM_text"
            android:layout_marginStart="26dp"
            android:textColor="#000"
            android:textSize="23dp" />

    <TextView
        android:id="@+id/BPM_text"
        android:layout_width="105dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="110dp"
        android:text="BPM"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/BPM"
        android:layout_alignParentTop="true"
        android:layout_marginTop="219dp"
        android:text="Location"
        android:textColor="#000"
        android:textSize="20dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/current_location_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="150dp"
        android:background="@drawable/cardiac" />


        <TextView
            android:id="@+id/step_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/BPM"
            android:layout_marginBottom="193dp"
            android:text="step counts "
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/counts"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/current_location_icon"
            android:layout_alignTop="@+id/step_counts"
            android:text="120"
            android:textColor="#000"
            android:textSize="18dp" />


    <Button
        android:id="@+id/maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:background="@drawable/oval_button"
        android:text="maps" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/oval_button"
        android:text="check" />


    </RelativeLayout>



